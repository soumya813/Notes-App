
<div class="container-fluid container-fluid-custom pb-5 mb-5 px-4" style="overflow-x: hidden;">
    <!-- Set note ID for JavaScript -->
    <script>
        window.NOTE_ID = '<%= noteID %>';
    </script>

    <div class="row mb-4">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/dashboard" style="text-decoration: none;">Dashboard</a></li>    
                    <li class="breadcrumb-item active" aria-current="page"><%= note.title %></li>
                </ol>
            </nav>

            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h2 mb-0 fw-bold">View Note</h1>
                <div class="btn-group" role="group" aria-label="Note actions">
                    <button type="button" class="btn btn-outline-info" id="summarizeButton">
                        <i class="fas fa-magic me-1"></i>AI Summary
                    </button>
                    <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" id="deleteButton" data-bs-target="#deleteModal">
                        <i class="fas fa-trash me-1"></i>Delete
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm" style="background-color: #ffffff;">
                <div class="card-body">
                    <% if (typeof isOwner !== 'undefined' && isOwner) { %>
                    <div class="mb-4 p-3 border rounded bg-light">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <strong><i class="fas fa-user-friends me-2"></i>Collaboration</strong>
                            <form action="/dashboard/item/<%= noteID %>/collab/toggle" method="POST" class="d-inline">
                                <input type="hidden" name="enable" value="<%= !note.isCollabEnabled %>">
                                <button type="submit" class="btn btn-sm <%= note.isCollabEnabled ? 'btn-outline-danger' : 'btn-outline-success' %>">
                                    <i class="fas <%= note.isCollabEnabled ? 'fa-ban' : 'fa-users' %> me-1"></i>
                                    <%= note.isCollabEnabled ? 'Disable' : 'Enable' %>
                                </button>
                            </form>
                        </div>
                        <div class="row g-2 align-items-center">
                            <div class="col-md-6">
                                <form action="/dashboard/item/<%= noteID %>/collab/add" method="POST" class="d-flex gap-2">
                                    <input type="email" name="email" class="form-control" placeholder="Invite by email" required <%= note.isCollabEnabled ? '' : 'disabled' %> />
                                    <button class="btn btn-primary" <%= note.isCollabEnabled ? '' : 'disabled' %> >Invite</button>
                                </form>
                            </div>
                        </div>
                        <% if (note.isCollabEnabled && collaboratorList && collaboratorList.length) { %>
                        <div class="mt-3">
                            <small class="text-muted d-block mb-1">Collaborators</small>
                            <div class="d-flex flex-wrap gap-2">
                <% collaboratorList.forEach(function(c){ %>
                                    <form action="/dashboard/item/<%= noteID %>/collab/remove" method="POST" class="d-inline">
                    <input type="hidden" name="userId" value="<%= c.id %>">
                                        <span class="badge bg-secondary">
                        <%= c.name %> (<%= c.email %>)
                                            <button class="btn btn-sm btn-link text-light p-0 ms-1" title="Remove">
                                                <i class="fas fa-times"></i>
                                            </button>
                                        </span>
                                    </form>
                                <% }) %>
                            </div>
                        </div>
                        <% } %>
                        <div class="mt-2">
                            <small class="text-muted">
                                <%= note.isCollabEnabled ? 'Collaboration is enabled. Invite users by email.' : 'Collaboration is disabled.' %>
                            </small>
                        </div>
                    </div>
                    <% } %>
                    <!-- Form -->
                    <form action="/dashboard/item/<%= noteID %>?_method=PUT" method="POST">
                        <div class="form-floating mb-4">
                            <input
                                type="text"
                                class="form-control"
                                id="title"
                                name="title"
                                placeholder="Note Title"
                                value="<%= note.title %>"
                                required
                            />
                            <label for="title"><i class="fas fa-heading me-2"></i>Title</label>
                        </div>

                        <div class="form-floating mb-4">
                            <textarea
                                class="form-control"
                                placeholder="Write your note here..."
                                id="body"
                                name="body"
                                style="height: 400px; resize: vertical;"
                                required
                            ><%= note.body %></textarea>
                            <label for="body"><i class="fas fa-edit me-2"></i>Note Content</label>
                        </div>

                        <!-- Summary Section -->
                        <div class="mb-4 <% if(!note.summary || !note.summary.trim()) { %>d-none<% } %>" id="summarySection">
                            <div class="card border-primary bg-light">
                                <div class="card-header bg-primary bg-opacity-10 d-flex justify-content-between align-items-center">
                                    <h6 class="mb-0 text-primary">
                                        <i class="fas fa-robot me-2"></i>AI Generated Summary
                                    </h6>
                                    <div class="d-flex align-items-center">
                                        <span class="badge bg-success me-2">
                                            <i class="fas fa-check me-1"></i>Saved
                                        </span>
                                        <button type="button" class="btn btn-sm btn-outline-primary" id="regenerateButton" title="Regenerate summary">
                                            <i class="fas fa-redo"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <p id="summaryContent" class="mb-0"><%= note.summary || '' %></p>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary btn-lg flex-grow-1">
                                <i class="fas fa-save me-2"></i>Update Note
                            </button>
                            <a href="/dashboard" class="btn btn-secondary btn-lg">
                                <i class="fas fa-arrow-left me-2"></i>Back
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


<!-- Delete Confirmation Modal -->
<div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title">
                    <i class="fas fa-exclamation-triangle text-warning me-2"></i>Confirm Delete
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="mb-3">
                    Are you sure you want to delete the note 
                    <strong class="text-primary">"<%= note.title %>"</strong>?
                </p>
                <div class="alert alert-warning d-flex align-items-center" role="alert">
                    <i class="fas fa-info-circle me-2"></i>
                    <small>This action cannot be undone. The note and its summary will be permanently deleted.</small>
                </div>
            </div>
            <div class="modal-footer border-0 pt-0">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>Cancel
                </button>
                <form action="/dashboard/item-delete/<%= noteID %>?_method=DELETE" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-2"></i>Delete Note
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
// Expose variables for collaboration script and ai-summary.js
window.NOTE_ID = '<%= noteID %>';
window.COLLAB_ENABLED = JSON.parse('<%- JSON.stringify(!!note.isCollabEnabled) %>');

// Show any server messages
document.addEventListener('DOMContentLoaded', function() {
    const serverMsgsEl = document.getElementById('server-msgs');
    if (serverMsgsEl && typeof showToast === 'function') {
        try {
            const serverMsgs = JSON.parse(serverMsgsEl.textContent || '{}');
            if (serverMsgs.success) showToast(serverMsgs.success, 'success');
            if (serverMsgs.error) showToast(serverMsgs.error, 'danger');
        } catch {}
    }
});
</script>

<!-- Socket.IO client and collab script -->
<script src="/socket.io/socket.io.js"></script>
<script src="/js/collab.js"></script>
<!-- Server messages JSON (safe to parse in JS above) -->
<script type="application/json" id="server-msgs"><%- JSON.stringify({ success: typeof successMessage !== 'undefined' ? successMessage : null, error: typeof errorMessage !== 'undefined' ? errorMessage : null }) %></script>
